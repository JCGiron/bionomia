%ul{id: "admin-tabs", class: "nav nav-tabs pl-2"}
  %li{class: "nav-item"}
    %a{class: "nav-link#{locals[:active_page] == "overview" ? " active" : nil}", href: url("/admin/user/#{@admin_user.identifier}")}
      %i{class:"fas fa-user"}
      = I18n.t('profile.overview')
  %li{class: "nav-item badge-item"}
    %a{class: "nav-link#{locals[:active_page] == "specimens" ? " active" : nil}", href: url("/admin/user/#{@admin_user.identifier}/specimens")}
      %i{class:"fas fa-th"}
      = I18n.t('profile.specimens')
    %span{id:"specimen-counter", class: "badge-notify badge badge-danger badge-pill"}
  %li{class: "nav-item badge-item"}
    %a{class: "nav-link#{locals[:active_page] == "helped" ? " active" : nil}", href: url("/admin/user/#{@admin_user.identifier}/helped")}
      %i{class:"fas fa-hands-helping"}
      = I18n.t('profile.people_helped')
    %span{id:"message-counter", class: "badge-notify badge badge-success badge-pill"}
  %li{class: "nav-item"}
    %a{class: "nav-link#{locals[:active_page] == "citations" ? " active" : nil}", href: url("/admin/user/#{@admin_user.identifier}/citations")}
      %i{class:"fas fa-flask"}
      = I18n.t('profile.science_enabled')
